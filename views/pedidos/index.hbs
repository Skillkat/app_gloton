{{> navbar}}
<div class="container mt-5">
  <h2>Mis Pedidos</h2>
  {{#if success}}
    <div class="alert alert-success">{{success}}</div>
  {{/if}}
  {{#if error}}
    <div class="alert alert-danger">{{error}}</div>
  {{/if}}
  {{#if pedidos.length}}
    <a href="/pedidos/create" class="btn btn-success mb-3">Crear nuevo</a>
    <table class="table table-bordered table-striped">
      <thead class="table-dark">
        <tr>
          <th>ID</th>
          <th>Cliente</th>
          <th>Comercio</th>
          <th>Delivery</th>
          <th>Estado</th>
          <th>Fecha</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        {{#each pedidos}}
        <tr>
          <td>{{this.id}}</td>
          <td>{{this.clienteNombre}} ({{this.clienteCorreo}})</td>
          <td>{{this.comercioNombre}}</td>
          <td>{{this.deliveryNombre}}</td>
          <td>{{this.estado}}</td>
          <td>{{this.fecha}}</td>
          <td>
            <a href="/pedidos/edit/{{this.id}}" class="btn btn-warning btn-sm">Editar</a>
            <form action="/pedidos/delete/{{this.id}}?_method=DELETE" method="POST" class="d-inline">
              <input type="hidden" name="_csrf" value="{{../csrfToken}}">
              <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
            </form>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  {{else}}
    <p>No hay pedidos disponibles.</p>
  {{/if}}
</div>