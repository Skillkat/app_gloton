<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Listado de Pedidos</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container mt-5">
  <h2>Pedidos</h2>
  <a href="/pedidos/create" class="btn btn-success mb-3">Crear nuevo</a>
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>ID Cliente</th>
        <th>Fecha</th>
        <th>Estado</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      {{#each pedidos}}
      <tr>
        <td>{{this.id}}</td>
        <td>{{this.id_cliente}}</td>
        <td>{{this.fecha}}</td>
        <td>{{this.estado}}</td>
        <td>
          <a href="/pedidos/edit/{{this.id}}" class="btn btn-warning btn-sm">Editar</a>
          <form action="/pedidos/delete/{{this.id}}" method="POST" class="d-inline">
            <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
          </form>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</body>
</html>
