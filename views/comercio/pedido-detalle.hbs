<div class="container mt-4">
  <h3>Detalle del Pedido</h3>
  <p>Estado: {{pedido.estado}}</p>
  <p>Fecha: {{pedido.fecha}}</p>

  <ul class="list-group mb-3">
    {{#each pedido.productos}}
    <li class="list-group-item">
      <img src="{{this.imagen}}" alt="{{this.nombre}}" width="40" class="me-2">
      {{this.nombre}} - ${{this.precio}}
    </li>
    {{/each}}
  </ul>

  <p><strong>Total: ${{pedido.total}}</strong></p>

  {{#if pedido.esPendiente}}
    {{#if pedido.deliveryDisponible}}
      <form method="POST" action="/comercio/pedido/asignar-delivery/{{pedido.id}}">
        <button class="btn btn-primary">Asignar Delivery</button>
      </form>
    {{else}}
      <p class="text-danger">No hay delivery disponible por ahora.</p>
    {{/if}}
  {{/if}}

  <a href="/comercio/home" class="btn btn-secondary mt-3">Volver</a>
</div>
