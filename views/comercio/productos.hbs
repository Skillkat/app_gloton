<div class="container mt-4">
  <h3>Productos</h3>
  <a href="/comercio/productos/crear" class="btn btn-success mb-3">Nuevo Producto</a>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Imagen</th>
        <th>Descripción</th>
        <th>Categoría</th>
        <th>Precio</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      {{#each productos}}
      <tr>
        <td>{{this.nombre}}</td>
        <td><img src="{{this.imagen}}" width="50"></td>
        <td>{{this.descripcion}}</td>
        <td>{{this.categoria.nombre}}</td>
        <td>${{this.precio}}</td>
        <td>
          <a href="/comercio/productos/editar/{{this.id}}" class="btn btn-sm btn-primary">Editar</a>
          <a href="/comercio/productos/eliminar/{{this.id}}" class="btn btn-sm btn-danger">Eliminar</a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
