<div class="container mt-4">
  <h3>Categorías</h3>
  <a href="/comercio/categorias/crear" class="btn btn-success mb-3">Nueva Categoría</a>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Descripción</th>
        <th>Productos</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      {{#each categorias}}
      <tr>
        <td>{{this.nombre}}</td>
        <td>{{this.descripcion}}</td>
        <td>{{this.productosCount}}</td>
        <td>
          <a href="/comercio/categorias/editar/{{this.id}}" class="btn btn-sm btn-primary">Editar</a>
          <a href="/comercio/categorias/eliminar/{{this.id}}" class="btn btn-sm btn-danger">Eliminar</a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
