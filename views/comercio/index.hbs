<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Lista de Comercios</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <h2>Comercios</h2>
    <a href="/comercios/create" class="btn btn-success mb-3">Agregar Comercio</a>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>#</th>
          <th>Nombre</th>
          <th>Direcci√≥n</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        {{#each comercios}}
        <tr>
          <td>{{id}}</td>
          <td>{{nombre}}</td>
          <td>{{direccion}}</td>
          <td>
            <a href="/comercios/edit/{{id}}" class="btn btn-warning btn-sm">Editar</a>
            <form action="/comercios/delete/{{id}}" method="POST" class="d-inline">
              <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
            </form>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</body>
</html>
