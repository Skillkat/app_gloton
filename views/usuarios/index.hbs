{{> navbar}}
<div class="container mt-5">
  <h2>Lista de Usuarios</h2>
  <a href="/usuarios/create" class="btn btn-primary mb-3">Agregar Usuario</a>
  {{#if success}}
    <div class="alert alert-success">{{success}}</div>
  {{/if}}
  {{#if error}}
    <div class="alert alert-danger">{{error}}</div>
  {{/if}}
  {{#if usuarios.length}}
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Correo</th>
        <th>Tipo</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      {{#each usuarios}}
      <tr>
        <td>{{id}}</td>
        <td>{{nombre}}</td>
        <td>{{correo}}</td>
        <td>{{tipo}}</td>
        <td>
          <a href="/usuarios/{{id}}/edit" class="btn btn-sm btn-warning">Editar</a>
          <form action="/usuarios/{{id}}?_method=DELETE" method="POST" class="d-inline" onsubmit="return confirm('¿Estás seguro de eliminar a {{nombre}}?')">
            <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
          </form>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  {{else}}
    <p>No se encontraron usuarios.</p>
  {{/if}}
</div>