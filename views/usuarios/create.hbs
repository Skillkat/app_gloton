{{> navbar}}
<div class="container mt-5">
  <h2>Crear Usuario</h2>
  {{#if error}}
    <div class="alert alert-danger">{{error}}</div>
  {{/if}}
  <form action="/usuarios" method="POST">
    <div class="mb-3">
      <label class="form-label">Nombre</label>
      <input type="text" class="form-control" name="nombre" value="{{nombre}}" required>
    </div>
    <div class="mb-3">
      <label class="form-label">Correo</label>
      <input type="email" class="form-control" name="correo" value="{{correo}}" required>
    </div>
    <div class="mb-3">
      <label class="form-label">Tipo</label>
      <select class="form-control" name="tipo" required>
        <option value="cliente" {{#if (eq tipo 'cliente')}}selected{{/if}}>Cliente</option>
        <option value="comercio" {{#if (eq tipo 'comercio')}}selected{{/if}}>Comercio</option>
        <option value="delivery" {{#if (eq tipo 'delivery')}}selected{{/if}}>Delivery</option>
        <option value="admin" {{#if (eq tipo 'admin')}}selected{{/if}}>Admin</option>
      </select>
    </div>
    <div class="mb-3">
      <label class="form-label">Contrase√±a</label>
      <input type="password" class="form-control" name="contrasena" required>
    </div>
    <button type="submit" class="btn btn-primary">Registrar</button>
  </form>
</div>