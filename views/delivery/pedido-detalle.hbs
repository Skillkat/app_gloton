<div class="container mt-4">
  <h3>Detalle del Pedido</h3>
  <p>Comercio: {{pedido.comercio}}</p>
  <p>Estado: {{pedido.estado}}</p>
  <p>Fecha: {{pedido.fecha}}</p>

  <ul class="list-group mb-3">
    {{#each pedido.productos}}
    <li class="list-group-item">
      <img src="{{this.imagen}}" alt="{{this.nombre}}" width="40" class="me-2">
      {{this.nombre}} - ${{this.precio}}
    </li>
    {{/each}}
  </ul>

  <p><strong>Total: ${{pedido.total}}</strong></p>

  {{#if pedido.esProceso}}
    <form method="POST" action="/delivery/pedido/completar/{{pedido.id}}">
      <button class="btn btn-success">Marcar como Completado</button>
    </form>
  {{else if pedido.esCompletado}}
    <p class="text-success">Pedido completado.</p>
  {{/if}}

  {{#if pedido.direccion}}
  <p><strong>Direcci√≥n de entrega:</strong> {{pedido.direccion}}</p>
  {{/if}}

  <a href="/delivery/home" class="btn btn-secondary mt-3">Volver</a>
</div>
