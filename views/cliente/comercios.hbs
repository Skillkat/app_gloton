<div class="container mt-4">
  <h3>Comercios de tipo: {{tipo.nombre}}</h3>

  <form method="GET" action="">
    <input type="text" name="q" placeholder="Buscar comercio" class="form-control mb-3" />
    <button class="btn btn-primary">Buscar</button>
  </form>

  <p>{{comercios.length}} comercios encontrados</p>
  <div class="row">
    {{#each comercios}}
    <div class="col-md-4">
      <div class="card mb-3">
        <img src="{{this.logo}}" class="card-img-top" alt="{{this.nombre}}">
        <div class="card-body">
          <h5 class="card-title">{{this.nombre}}</h5>
          <form method="POST" action="/cliente/favoritos/agregar/{{this.id}}">
            <button class="btn btn-outline-danger">❤️ Favorito</button>
          </form>
          <a href="/cliente/catalogo/{{this.id}}" class="btn btn-primary mt-2">Ver productos</a>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>
