{{> navbar}}
<div class="container mt-5">
  <h2>Crear Comercio</h2>
  {{#if error}}
    <div class="alert alert-danger">{{error}}</div>
  {{/if}}
  {{#if success}}
    <div class="alert alert-success">{{success}}</div>
  {{/if}}
  <form action="/comercios" method="POST">
    <div class="mb-3">
      <label class="form-label">Nombre del Comercio</label>
      <input type="text" class="form-control" name="nombre_local" value="{{nombre_local}}" required>
    </div>
    <div class="mb-3">
      <label class="form-label">Correo</label>
      <input type="email" class="form-control" name="correo" value="{{correo}}" required>
    </div>
    <div class="mb-3">
      <label class="form-label">Contraseña</label>
      <input type="password" class="form-control" name="contrasena" required>
    </div>
    <div class="mb-3">
      <label class="form-label">Dirección</label>
      <textarea class="form-control" name="direccion">{{direccion}}</textarea>
    </div>
    <div class="mb-3">
      <label class="form-label">Teléfono</label>
      <input type="text" class="form-control" name="telefono" value="{{telefono}}">
    </div>
    <div class="mb-3">
      <label class="form-label">Horario de Apertura</label>
      <input type="time" class="form-control" name="horario_apertura" value="{{horario_apertura}}">
    </div>
    <div class="mb-3">
      <label class="form-label">Horario de Cierre</label>
      <input type="time" class="form-control" name="horario_cierre" value="{{horario_cierre}}">
    </div>
    <div class="mb-3">
      <label class="form-label">Deliveries Asignados</label>
      <select class="form-control" name="correo_deliverys" multiple>
        {{#each deliveries}}
          <option value="{{this.correo}}">{{this.correo}}</option>
        {{/each}}
      </select>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
  </form>
</div>