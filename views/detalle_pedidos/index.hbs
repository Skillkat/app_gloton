<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Listado Detalles de Pedidos</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container mt-5">
  <h2>Detalles de Pedidos</h2>
  <a href="/detalle_pedidos/create" class="btn btn-success mb-3">Crear nuevo</a>
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>ID Pedido</th>
        <th>ID Producto</th>
        <th>Cantidad</th>
        <th>Precio Unitario</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      {{#each detalles}}
      <tr>
        <td>{{this.id}}</td>
        <td>{{this.id_pedido}}</td>
        <td>{{this.id_producto}}</td>
        <td>{{this.cantidad}}</td>
        <td>{{this.precio_unitario}}</td>
        <td>
          <a href="/detalle_pedidos/edit/{{this.id}}" class="btn btn-warning btn-sm">Editar</a>
          <form action="/detalle_pedidos/delete/{{this.id}}" method="POST" class="d-inline">
            <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
          </form>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</body>
</html>
